@using WebApplication.Models
@model WebApplication.Models.EventResponseModel
@{
}
<style>
    .main-container {
        padding: 20px;
    }
    .categories-container {
        
    }

    .category-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .category-container > input {
        width: auto;
    }

    .items-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0 20px;
        margin-bottom: 20px;
    }
    .item-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 1px solid lightgrey;
        width: 100%;
    }
    .item-container span {
        color: black;
        font-weight: 500;
    }
</style>

<div class="main-container">

    <h3>Qui apporte quoi ?</h3>

    <div id="add-container">
        Ajouter une categorie
        <div class="alert alert-primary category-container">
            <input id="categoryInput" type="text" class="form-control" placeholder="Nom de la categorie" />
            <div>
                <button type="button" class="btn btn-light" onclick="appendNewCategory()">Ajouter</button>
            </div>
        </div>
    </div>

    <div class="categories-container">
        @foreach (var category in Model.categories)
        {
            <div>
                <div class="alert alert-primary category-container">
                    <h3>@category.name</h3>
                    <div>
                        <button type="button" class="btn btn-light">Edit</button>
                        <button type="button" class="btn btn-light" onclick="deleteCategory(this)">Delete</button>
                    </div>
                </div>
                <div class="items-container">
                    <div class="alert alert-light item-container">
                        <div>
                            <div>
                                Qui: <span>Yohan</span>
                            </div>
                            <div>
                                Quoi: <span>Des pates</span>
                            </div>
                        </div>
                        <div>
                            <button type="button" class="btn btn-light">Edit</button>
                            <button type="button" class="btn btn-light" onclick="deleteItem(this)">Delete</button>
                        </div>

                    </div>
                    <button type="button" class="btn btn-primary" onclick="appendItem(this)">+</button>
                </div>

            </div>

        }
    </div>
</div>

<script>
    function appendNewCategory() {
        const name = document.getElementById("categoryInput").value;
        document.getElementById("categoryInput").value = "";
        document.querySelector(".categories-container").innerHTML += `
            <div>
                <div class="alert alert-primary category-container">
                    <h3>${name}</h3>
                    <div>
                        <button type="button" class="btn btn-light">Edit</button>
                        <button type="button" class="btn btn-light">Delete</button>
                    </div>
                </div>
            </div>
            <div class="items-container">
                <button type="button" class="btn btn-primary" onclick="appendItem(this)">+</button>
            </div>`
    }

    function appendItem(buttonNode) {
        buttonNode.insertAdjacentHTML('beforebegin', `
                <div class="alert alert-light item-container">
                    <div>
                        <div>
                            Qui: <span>Yohan</span>
                        </div>
                        <div>
                            Quoi: <span>Des pates</span>
                        </div>
                    </div>
                    <div>
                        <button type="button" class="btn btn-light">Edit</button>
                        <button type="button" class="btn btn-light">Delete</button>
                    </div>

                </div>
        `);
    }

    function deleteItem(buttonNode) {
        // TODO: Take the id as a parameter and call the API
        buttonNode.parentNode.parentNode.remove();
    }

    function deleteCategory(buttonNode) {
        // TODO: Take the id as a parameter and call the API
        buttonNode.parentNode.parentNode.parentNode.remove();
    }
</script>

