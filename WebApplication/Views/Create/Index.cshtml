@model WebApplication.Dbo.Event

@{
    ViewData["Title"] = "Créer un évènement 🎉";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<style>
    .form-group {
        margin: 12px 0px;
    }
</style>

<div class="form-horizontal" style="margin-left: 20px; width: 50vw; padding: 25px">
    <h3 >@ViewData["Title"]</h3>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        <label>E-mail</label>
        <div>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group"> 
        <label>Nom</label>
        <div>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label>Description</label>
        <div>
            @Html.TextAreaFor(model => model.Description, new { @rows = 3, @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label>Date</label>
        <div>
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label>Lieu</label>
        <div>
            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group" style="display: flex; justify-content: flex-end">
            <input type="submit" value="Valider" class="btn btn-primary btn-lg" />
    </div>
</div>
}
